# SealGuard Web3 Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Blockchain Configuration
FILECOIN_RPC_URL=https://api.calibration.node.glif.io/rpc/v1
ADMIN_PRIVATE_KEY=your-admin-private-key-for-contract-interactions

# Smart Contract Addresses (loaded from deployment files)
# SEALGUARD_REGISTRY_ADDRESS=auto-loaded-from-deployment
# SEALGUARD_ACCESS_CONTROL_ADDRESS=auto-loaded-from-deployment

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# File Upload Configuration
UPLOAD_TEMP_DIR=./uploads/temp
MAX_FILE_SIZE=104857600

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_URL=https://ipfs.io/ipfs

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10

# Optional: Pinata IPFS Service (alternative to local IPFS)
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_API_KEY=your_pinata_secret_key

# Optional: Web3.Storage (alternative IPFS service)
# WEB3_STORAGE_TOKEN=your_web3_storage_token

# Notification Configuration
NOTIFICATION_CLEANUP_DAYS=30
MAX_NOTIFICATIONS_PER_USER=1000
WEBHOOK_SECRET=your_webhook_secret_for_blockchain_events

# Blockchain Configuration
CHAIN_ID=314159
GAS_LIMIT=1000000
GAS_PRICE=1000000000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sealguard.app

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking