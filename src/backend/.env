# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sealguard_dev
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Filecoin Configuration
SYNAPSE_API_KEY=your-synapse-api-key
SYNAPSE_API_URL=https://api.synapse.filoz.com
FILECOIN_NETWORK=calibration
FILECOIN_WALLET_PRIVATE_KEY=your-wallet-private-key

# PDP Configuration
PDP_CONTRACT_ADDRESS=0x...
PDP_VERIFICATION_INTERVAL=3600

# FilecoinPay Configuration
FILECOIN_PAY_API_KEY=your-filecoin-pay-api-key
FILECOIN_PAY_WEBHOOK_SECRET=your-webhook-secret

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx,zip

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true